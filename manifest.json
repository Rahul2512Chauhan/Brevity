{
  "manifest_version": 3,
  "name": "Smart Reading Companion",
  "version": "1.0",
  "description": "Highlight text and summarize it using Chrome Built-in AI",
  "permissions": ["contextMenus", "storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Smart Reading Companion",
    "default_popup": "sidebar.html"
  }
}
